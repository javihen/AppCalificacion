<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_estudiante"
    android:layout_width="match_parent"
    android:layout_height="42dp"
    android:orientation="horizontal"
    android:layout_margin="5dp"
    android:gravity="center"
    android:background="@drawable/style_drawable_estudiante">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/icon_usuario_est" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="250dp"
        android:maxLines="2"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="JUAN CARLOS RODRIFUEZ GONZALES"
        android:fontFamily="@font/montserrat"/>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/icon_libro_est" />
</LinearLayout>